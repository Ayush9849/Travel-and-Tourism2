@model Travel_and_Tourism.Models.RegisteredUser

@{
    ViewData["Title"] = "Profile Details";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-6">
            <h4>Name: @Model.FirstName @Model.Lastname</h4>
            <p>Email: @Model.Email</p>
        </div>
        <div class="col-md-6">
            <h4>Profile Picture:</h4>
            <img src="@Model.ProfilePicturePath" alt="Profile Picture" class="img-fluid" />
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <a href="/Profile/Edit" class="btn btn-primary">Edit Profile</a>
        </div>
    </div>
</div>
