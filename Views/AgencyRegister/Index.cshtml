<div class="d-flex justify-content-center align-items-center m-10">
    <div class="p-3" style="background-color:aliceblue;width:1000px;">
        <form asp-action="Create" class="row g-3">
            
            <div class="col-md-12">
                <img id="profilePicture" style="width:200px;height:200px;" class="rounded-circle mx-auto d-block img-thumbnail" alt="avatar1" src="~/images/default.png" />
            </div>
            
            <div class="col-md-12 d-flex justify-content-center">
                <div class="btn btn-primary btn-rounded">
                    <label for="imageInput">Choose Photo</label>
                    <input id="imageInput" type="file" class="form-control d-none" onchange="displaySelectedImage('profilePicture')" />
                </div>
            </div>

            <div class="col-md-12">
                <label for="agencyName" class="form-label">Agency Name</label>
                <input type="text" class="form-control" id="agencyName" />
            </div>

            <div class="col-md-12">
                <label for="description" class="form-label">Description</label>
                <textarea aria-label="With textarea" class="form-control" id="description" placeholder="Tell us something about your agency."></textarea>
            </div>

            <div class="col-md-6">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email">
            </div>

            <div class="col-md-6">
                <label for="inputPassword4" class="form-label">Password</label>
                <input type="password" class="form-control" id="inputPassword4">
            </div>
            
            <hr />

            <div id="addressHolder" class="col-md-12 g-3">
                <div class="col-md-12 row g-3" id="addressList[0]">
                    <div class="col-6">
                        <label for="inputAddress" class="form-label">Address</label>
                        <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
                    </div>

                    <div class="col-6">
                        <label for="inputAddress2" class="form-label">Address 2</label>
                        <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
                    </div>

                    <div class="col-md-6">
                        <label for="inputCity" class="form-label">City</label>
                        <input type="text" class="form-control" id="inputCity">
                    </div>

                    <div class="col-md-4">
                        <label for="inputState" class="form-label">State</label>
                        <select id="inputState" class="form-select">
                            <option selected>Choose...</option>
                            <option>...</option>
                        </select>
                    </div>

                    <div class="col-md-2">
                        <label for="inputZip" class="form-label">Zip</label>
                        <input type="text" class="form-control" id="inputZip">
                    </div>
                </div>
                <div class="col-12">
                    <button type="button" id="addNewAddress" class="btn btn-secondary" onclick="addAddressSection()" data-count="0">Add</button>
                    <button type="button" id="removeNewAddress" class="btn btn-secondary" onclick="removeAddressSection()" hidden>Remove</button>
                </div>
            </div>
            
            <hr />

            <div id="images" class="col-md-12 g-3 row">
                <div class="col-md-12">
                    <img id="displayPicture[0]" style="width:200px;height:200px;" class="rounded-circle mx-auto d-block img-thumbnail" alt="avatar1" src="~/images/default.png"/>
                </div>
                <div class="col-md-12 d-flex justify-content-center">
                    <div class="btn btn-primary btn-rounded">
                        <label for="displayImageInput">Add Photo</label>
                        <input id="multipleImageUpload" type="file" class="form-control d-none" onchange="displayPictures()" onclick="clicked()" />
                    </div>
                </div>
            </div>

            <div class="col-12">
                <button type="submit" class="btn btn-primary">Sign up</button>
            </div>

        </form>
    </div>
</div>

<script src="~/Script/AgencyRegister/Create.js"></script>