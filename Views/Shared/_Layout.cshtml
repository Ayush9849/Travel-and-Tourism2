<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Travel and Tourism</title>

    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    @RenderSection("Style", required: false)
</head>

<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Home/">Travel and Tour</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/Home/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/TourPackages/Create">Packages</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Bookings/Create">Booking</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Feedbacks/Create">Feedback</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Profile/Details">Profile</a>
                    </li>
                </ul>
                <div class="d-flex">
                    <form action="/login" method="get">
                        <button class="btn btn-outline-success" type="submit">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <main role="main" class="container my-4">
        @RenderBody()
    </main>

    <footer class="footer text-center mt-auto py-3 bg-light">
        © 2025 Tourism Platform
    </footer>

    <script src="~/Script/bootstrap.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
