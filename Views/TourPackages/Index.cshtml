                @Html.DisplayFor(modelItem => item.AvailableDates)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxGroupSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TourId">Edit</a> |
