@model IEnumerable<Travel_and_Tourism.Models.TourPackage>

@{
    ViewData["Title"] = "Explore Tour Packages";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;" />
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text text-muted"><strong>Agency:</strong> @item.TravelAgency?.AgencyName</p>
                    <p class="card-text">@item.Description?.Substring(0, Math.Min(item.Description.Length, 100))...</p>
                    <p class="card-text"><strong>Price:</strong> $@item.Price</p>
                    <a asp-action="Details" asp-route-id="@item.TourId" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
