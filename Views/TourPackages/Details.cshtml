@model Travel_and_Tourism.Models.TourPackage

@{
    ViewData["Title"] = "Tour Package Details";
}

<div class="container mt-4">
    <h1 class="mb-3">@Model.Title</h1>

    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Title" style="max-height: 400px; object-fit: cover;">
        </div>
        <div class="col-md-6">
            <h4>Provided By</h4>
            <p><strong>@Model.TravelAgency?.AgencyName</strong></p>
            <p><em>@Model.TravelAgency?.ServicesOffered</em></p>

            <h4>Description</h4>
            <p>@Model.Description</p>

            <h5>Details</h5>
            <ul class="list-group">
                <li class="list-group-item"><strong>Duration:</strong> @Model.Duration</li>
                <li class="list-group-item"><strong>Available Dates:</strong> @Model.AvailableDates</li>
                <li class="list-group-item"><strong>Max Group Size:</strong> @Model.MaxGroupSize</li>
                <li class="list-group-item"><strong>Price:</strong> $@Model.Price</li>
            </ul>

            <a asp-action="Index" class="btn btn-secondary mt-3">Back to Packages</a>
        </div>
    </div>
</div>
