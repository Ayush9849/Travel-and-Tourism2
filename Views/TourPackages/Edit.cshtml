@model Travel_and_Tourism.ViewModels.TourPackageViewModel
@{
    ViewData["Title"] = "Edit Tour Package";
}

<h2>Edit Tour Package</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="TourId" />
    <input type="hidden" asp-for="ExistingImageUrl" />

    <div class="mb-3">
        <label asp-for="AgencyId" class="form-label"></label>
        <select asp-for="AgencyId" class="form-select" asp-items="ViewBag.AgencyId"></select>
    </div>

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Duration" class="form-label"></label>
        <input asp-for="Duration" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="AvailableDates" class="form-label"></label>
        <input asp-for="AvailableDates" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="MaxGroupSize" class="form-label"></label>
        <input asp-for="MaxGroupSize" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="ImageFile" class="form-label">Upload New Image</label>
        <input asp-for="ImageFile" class="form-control" type="file" />
    </div>

    @if (!string.IsNullOrEmpty(Model.ExistingImageUrl))
    {
        <div class="mb-3">
            <p>Current Image:</p>
            <img src="@Model.ExistingImageUrl" width="200" />
        </div>
    }

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
